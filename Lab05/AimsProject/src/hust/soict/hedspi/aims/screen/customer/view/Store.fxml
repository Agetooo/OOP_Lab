<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hust.soict.hedspi.aims.screen.customer.controller.ViewStoreController">
    <center>
        <VBox prefHeight="768.0" prefWidth="1024.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0">
                    <children>
                        <Label text="AIMS" textFill="#004cff">
                            <font>
                                <Font size="50.0" />
                            </font>
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button onAction="#btnViewCartPressed" prefHeight="50.0" prefWidth="100.0" text="View Cart">
                            <HBox.margin>
                                <Insets right="20.0" />
